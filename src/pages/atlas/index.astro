---
import Layout from "../../layouts/Layout.astro";
import Users from "../../images/Users.astro";
---

<Layout title="admin">
  <div class="content">
    <h2>Admin panel</h2>
    <nav>
      <ul>
        <li>
          <a href="atlas/krambambouli"> Krambambouli </a>
        </li>
        <li>
          <a href="atlas/users">
            <Users />
            Gebruikers</a
          >
        </li>
        <li><a href="atlas/boards">Bestuursjaren</a></li>
      </ul>
    </nav>
  </div>
  <style>
    .content {
      display: grid;
      gap: 3rem;
      justify-content: center;
    }
    ul {
      display: flex;
      gap: 1rem;
      place-items: center;
      list-style: none;
      padding: 0;
      margin: 0;
    }
    li > a {
      text-align: center;
      display: grid;
      gap: 1rem;
    }
    li {
      border: solid gray 3px;
      padding: 1rem;
      border-radius: 1rem;
    }
    svg {
      width: 100%;
      height: 100%;
    }
  </style>
</Layout>
