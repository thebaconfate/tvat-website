    <div class="top-bun" id="top-bun"></div>
    <div class="patty" id="patty"></div>
    <div class="bottom-bun" id="bottom-bun"></div>
  </div>
  <div class="menu-overlay" id="menu-overlay"></div>
  <ul class="nav-menu" id="nav-menu">
    <h3>MENU</h3>
    <li class="nav-item">
      <a href={websiteRoutes.home.url}>Home</a>
      <div class="horizontal-line"></div>
    </li>
    <li class="nav-item">
      <a href={websiteRoutes.lustrumGala.url}>Lustrumgalabal</a><div
        class="horizontal-line"
      >
      </div>
    </li>
    <li class="nav-item">
      <a href={websiteRoutes.board.url}>Bestuur & oud bestuur</a><div
        class="horizontal-line"
      >
      </div>
    </li>
    <li class="nav-item">
      <a href={websiteRoutes.clubsong.url}>Clublied</a><div
        class="horizontal-line"
      >
      </div>
    </li>
    <li class="nav-item">
      <a href={websiteRoutes.history.url}>Geschiedenis</a><div
        class="horizontal-line"
      >
      </div>
    </li>
    <li class="nav-item">
      <a href={websiteRoutes.krambambouli.url}>Krambambouli</a><div
        class="horizontal-line"
      >
      </div>
    </li>
    <li class="nav-item">
      <a href={codexChallengeUrl}>Codex Challenge</a><div
        class="horizontal-line"
      >
      </div>
    </li>
    <li class="nav-item">
      <a href={websiteRoutes.youtube.url}>Youtube</a><div
        class="horizontal-line"
      >
      </div>
    </li>
    <li class="nav-item">
      <a href={mailingslistUrl}>Inschrijven mailingslijst</a><div
        class="horizontal-line"
